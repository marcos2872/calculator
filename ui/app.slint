import { Button, VerticalBox, HorizontalBox } from "std-widgets.slint";

export component AppWindow inherits Window {
    title: "Calculator";
    preferred-width: 400px;
    preferred-height: 800px;
    min-width: 400px;
    min-height: 800px;
    icon: @image-url("../assets/logo.png");
    no-frame: true;
    in-out property <int> counter: 0;
    callback increment-counter();
    callback decrement-counter();
    callback close-window();
    callback minimize-window();
    background: #1e1e1e;
    Rectangle {
        height: 40px;
        background: parent.background;
        x: 0;
        y: 0;
        width: parent.width;
        HorizontalBox {
            padding: 8px;
            spacing: 10px;

            Rectangle {
                width: 24px;
                height: 24px;
                border-radius: 4px;
                Image {
                    source: @image-url("../assets/logo.png");
                    width: 24px;
                    height: 24px;
                }
            }

            Rectangle {
                horizontal-stretch: 1;
                Text {
                    text: "Calculator";
                    color: white;
                    font-size: 14px;
                    font-weight: 600;
                    vertical-alignment: center;
                }
            }

            HorizontalBox {
                spacing: 14px;
                Rectangle {
                    width: 14px;
                    height: 14px;
                    border-radius: 14px;
                    background: #40FF00;
                    min-touch := TouchArea {
                        clicked => {
                            root.minimize-window();
                        }
                    }
                }

                Rectangle {
                    width: 14px;
                    height: 14px;
                    border-radius: 14px;
                    background: #FF2B00;
                    close-touch := TouchArea {
                        clicked => {
                            root.close-window();
                        }
                    }
                }
            }
        }
    }

    VerticalBox {
        padding-top: 40px;
        alignment: center;
        Text {
            text: "Bem-vindo ao Slint!";
            font-size: 24px;
            color: white;
            horizontal-alignment: center;
        }

        Text {
            text: "Contador: " + counter;
            font-size: 32px;
            horizontal-alignment: center;
            color: #0066cc;
        }

        HorizontalBox {
            alignment: center;
            spacing: 20px;
            Button {
                text: "➖ Decrementar";
                clicked => {
                    root.decrement-counter();
                }
            }

            Button {
                text: "➕ Incrementar";
                primary: true;
                clicked => {
                    root.increment-counter();
                }
            }
        }
    }
}
