export component CalcButton {
    callback clicked;
    in-out property <string> text;
    in-out property <brush> bg_color: #343434;
    in-out property <length> text_size: 24px;
    in-out property <int> text_weight: 600;

    Rectangle {
        border-width: 0px;
        border-radius: 24px;
        border-color: #555555;

        background: ta.pressed ? root.bg_color.darker(1.2) : root.bg_color;

        animate background { duration: 100ms; }

        Text {
            width: parent.width;
            height: parent.height;
            text: root.text;
            color: white;
            font-size: root.text_size;
            font-weight: root.text_weight;
            horizontal-alignment: center;
            vertical-alignment: center;
        }

        ta := TouchArea {
            clicked => {
                root.clicked();
            }
        }
    }
}
